@import 'jeet'

// Setup

global-reset()

//edit()

*, *:before, *:after
  box-sizing border-box
  
// Colors

darkPrimary = #7B1FA2
primary = #9C27B0
lightPrimary = #E1BEE7
accent = #00BCD4
textPrimary = #212121

// Utility Classes

.m10-0
  margin 10px 0  

.p25
  padding 25px
  
.x
  display inline-block
  
// Fonts

body
  font-family verdana sans-serif
  color textPrimary
  
// Headers

header-sizes = 2em 1.6em 1.3em
for size, i in header-sizes
  h{i+1}
    font-size size
    @extend .m10-0
  
// Paragraph
  
p
  line-height 1.3em
  
// Links
  
a
  text-decoration none
  cursor pointer
  
// Form Elements

label
  display block
  
input, textarea
  font-size 0.85em
  padding 10px 0
  
select
  font-size 1em 
  margin 10px 0
  
// Layout

html, body
  height 100%

.wrapper
  position relative
  height 100%
  
headerFooterLayout(header-size, footer-size)
  .header   
    position fixed
    width 100%
    height header-size
    line-height header-size
    box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  
  .body
    height 100%
    padding header-size 0 footer-size 
    clearfix()
  
  .footer
    position absolute
    bottom 0 
    width 100%
    height footer-size   
    
asideArticleLayout(aside-width)
  aside, article
    float left
    height 100%

  aside
    width aside-width
    
  article
    width "calc(100% - %s)" % (aside-width)
    
headerFooterLayout(50px, 100px)    
asideArticleLayout(300px)
    
// Navigation

nav.side a
  display block
  line-height 50px
  padding-left 25px
  
nav.side a:hover
  background silver 
  
// Buttons

.btn
  padding 6px 10px
  color white
  border 2px solid
  text-align center
  cursor pointer
  transition background 0.3s ease 
  
.btn:hover
  color textPrimary
  border 2px solid white
  background white
  
.danger
  color red

.danger:hover
  background red
  
// Spec

body
  background url('https://ununsplash.imgix.net/photo-1417870839255-a23faa90c6b0?q=75&fm=jpg&s=96d46061e7ecc8eb2ef0e9016d1eeb99')
  background-size cover
  color white
  
.header *
  padding 0 20px

a
  color white
  
input
  border-top none
  border-right none
  border-left none
  outline-style none

input:focus
  border-bottom 2px solid yellow
  
input
  background transparent
  color white
  
* + label
  margin-top 10px
  
aside
  color white

.title
  width 205px
  margin 0 auto
    
.home .btn
  width 250px

.guestbook 
  .btn
    width 198px
  textarea
    size 400px 200px
  
// Tests

+below(683px)
  [id^="velocity"]
    display none
