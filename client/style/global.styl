// Setup

global-reset()

*, *:before, *:after
  box-sizing border-box
  
hr
  margin 0
  
// Fonts

body
  font-family verdana sans-serif
  
// Headers

h1, h2, h3
  margin 10px 9
  
h1
  font-size 2em
  
h2
  font-size 1.6em
  
h3
  font-size 1.3em
  
p
  line-height 1.3em
  
// Links
  
a
  text-decoration none
  cursor pointer
  
// Form Elements
  
input, textarea
  font-size 1em
  margin 10px 0
  padding 3px
  
textarea
  size 80%
  
select
  font-size 1em 
  margin 10px 0
  
// Layout

html, body
  height 100%

.wrapper
  position relative
  height 100%
  
headerFooterLayout(header-size, footer-size)
  .header   
    position fixed
    width 100%
    height header-size
    line-height header-size
    box-shadow 0 2px 10px 0 rgba(0, 0, 0, 0.16), 0 2px 5px 0 rgba(0, 0, 0, 0.26)
  
    a
      height 100%
      display inline-block
      padding 0 20px
  
  .body
    padding header-size 0 footer-size
    clearfix()
  
  .footer
    position absolute
    bottom 0 
    width 100%
    height footer-size   
    
headerFooterLayout(50px, 100px)

aside
  float left
  width 300px  
  padding 20px
  
article
  padding 20px 20px 20px 0
  
// Navigation

nav.side a
  display block
  padding 10px 0
  
// Variables

primary = black
primaryInvert = invert(primary)
  
// Buttons

.btn
  padding 8px
  color primary
  border 2px solid
  text-align center
  cursor pointer
  transition background 0.3s ease 
  
.btn:hover
  color primaryInvert
  border 2px solid primary
  background primary
  
.x
  display inline-block

// Tests

+below(683px)
  [id^="velocity"]
    display none
